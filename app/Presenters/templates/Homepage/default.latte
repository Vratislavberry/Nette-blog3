{block content}
<h1 n:block="title">Náš blog</h1>

{*}<a n:href="Edit:create">Napsat nový článek</a>{*}
<a n:href="Edit:create $post->id" n:if="$user->isLoggedIn()">Napsat nový článek</a>

{foreach $posts as $post}


<h2><a href="{link Post:show $post->id}">{$post->title}</a></h2>

<p>Created at: {$post->created_at|date:'j F, Y'}</p>

<p>{$post->content|truncate:256}</p>
<br>
{/foreach}
